{
  "name": "shamir-secret-sharing",
  "description": "App for creating and combining secrets with Shamir Secret Sharing",
  "author": {
    "name": "Th3_S1lenc3",
    "email": "54558771+Th3-S1lenc3@users.noreply.github.com"
  },
  "version": "2.0.0-dev",
  "private": true,
  "license": "MIT",
  "build": {
    "appId": "com.Th3_S1lenc3.math-calculator",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "linux": {
      "target": [
        "AppImage",
        "snap",
        "deb"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    }
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3",
  },
  "devDependencies": {
    "concurrently": "^6.0.0",
    "electron": "^12.0.2",
    "electron-builder": "^22.10.5",
    "wait-on": "^5.3.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron-dev": "concurrently \"BROWSER=none PORT=3001 npm run start\" \"wait-on http://localhost:3001 && electron --trace-warnings .\"",
    "compile": "npm run build && electron-builder"
  },
  "main": "public/electron.js",
  "homepage": "./",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}